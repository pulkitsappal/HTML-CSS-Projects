<html>
	<head></head>
	<body>

	<script>
		window.onload = function() {
  		yourFunction();
		};

function yourFunction() { 
            setInterval(function() {
                const randomColor = Math.floor(Math.random()*16777215).toString(16);
  		document.body.style.backgroundColor = "#" + randomColor;
            }, 2000);
        }
	</script>
	</body>
</html>
